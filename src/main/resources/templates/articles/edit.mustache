{{>layouts/header}}

<form class="container" action="/articles/update" method="post"> <!-- action :어디로 보낼지 method : 어떻게 보낼지 -->
    <input name="id" type="hidden" value="{{id}}" />
    <div class="mb-3">
        <label calss="form-label">Title</label>
        <input type="text" class="form-control" name="title" value="{{article.title}}">
        <!-- name은 dto 와 동일한 변수명(ArticleForm 의 title)으로, 인풋 데이터를 Dto로 감싼다음 해당 내용을 Entity로 변환 -->
    </div>
    <div class="mb-3">
        <label calss="form-label">Contents</label>
        <textarea class="form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{article.id}}">back</a>
</form>


{{>layouts/footer}}